{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "spec",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "buildOnSave": false,
  "compileOnSave": false,
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "./**/*.d.ts",
    "node_modules",
    "build",
    "specs"
  ],
  "filesGlob": [
    "../**/*.ts"
  ]
}
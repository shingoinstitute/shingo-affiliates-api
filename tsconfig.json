{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    // nestjs does not distribute safe/correct types, so we are getting no-implicit-any errors
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "target": "es2016",
    "outDir": "build",
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"]
}
